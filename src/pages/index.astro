---
import Layout from "../layouts/Layout.astro";
import Hero from "../sections/Home/Hero";
import Services from "../sections/Home/Services";
import WebAnimation from "../sections/Home/WebAnimation";
import Pricing from "../sections/Home/Pricing";
import ContactForm from "../sections/Home/ContactForm";
import { Testimonials } from "../sections/Home/Testimonials";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Professional Web Development Services | Custom Websites & Web Apps | WorkInWeb"
  description="Expert web development agency specializing in custom websites, e-commerce solutions, and web applications. Our professional team creates fast, secure, and SEO-optimized websites that drive business growth. Get a free consultation today."
  image="/workinweb_logo.jpeg"
>
  <Navbar client:only="react" />

  <main>
    <Hero client:only="react" />
    <Services client:only="react" />
    <WebAnimation client:only="react" />
    <Testimonials client:only="react" />
    <Pricing client:only="react" />
    <ContactForm client:only="react" />
  </main>

  <Footer />
</Layout>
