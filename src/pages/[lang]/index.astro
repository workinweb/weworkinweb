---
import Footer from "../../components/Footer.astro";
import Navbar from "../../components/Navbar";
import Layout from "../../layouts/Layout.astro";
import ContactForm from "../../sections/Home/ContactForm";
import Hero from "../../sections/Home/Hero.astro";
import Members from "../../sections/Home/Members";
import Pricing from "../../sections/Home/Pricing";
import Services from "../../sections/Home/Services";

import {
  getLangFromUrl,
  languages,
  useTranslations,
} from "../../i18n/translations";
import WebAnimation from "../../sections/Home/WebAnimation.astro";

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={`${t("page.home.title")}`}
  description={t("page.home.description") as string}
  image="https://weworkinweb.com/logo/logo_notext.svg"
>
  <Navbar client:only="react" />

  <main>
    <Hero />
    <Services client:only="react" />
    <WebAnimation />
    <Members client:only="react" />
    <Pricing client:only="react" />
    <ContactForm client:only="react" />
  </main>
  <Footer />
</Layout>
