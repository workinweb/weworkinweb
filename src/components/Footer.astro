---
import Logo from "../components/Logo";
import { Mail, Phone, MapPin, FileText, ScrollText, Lock } from "lucide-react";
import { getLangFromUrl, useTranslations } from "../i18n/translations";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
  class="bg-gradient-to-r from-slate-900 to-slate-800 text-white py-16"
  role="contentinfo"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <div class="space-y-6">
        <Logo withDescription={false} />
        <p class="text-slate-300 text-sm leading-relaxed">
          {t("footer.paragraph")}
        </p>
      </div>

      <div>
        <nav aria-label={t("footer.legal.title")}>
          <h2 class="text-lg font-semibold mb-6">{t("footer.legal.title")}</h2>
          <ul class="space-y-4">
            {
              [
                { text: t("footer.legal.terms"), icon: FileText },
                { text: t("footer.legal.license"), icon: ScrollText },
                { text: t("footer.legal.privacy"), icon: Lock },
              ].map((item) => {
                const Icon = item.icon;
                return (
                  <li>
                    <a
                      href={`/${item.text.toLowerCase().replace(/\s+/g, "-")}`}
                      class="text-slate-300 hover:text-white transition-colors flex items-center"
                    >
                      <Icon className="h-5 w-5 mr-2" /> {item.text}
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </nav>
      </div>

      <div>
        <nav aria-label={t("footer.follow.title")}>
          <h2 class="text-lg font-semibold mb-6">{t("footer.follow.title")}</h2>
          <ul class="space-y-4">
            <li>
              <a
                href="https://linkedin.com/company/workinweb"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-300 hover:text-white transition-colors flex items-center"
                aria-label="Follow us on LinkedIn"
              >
                <svg
                  class="h-5 w-5 mr-3"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
                LinkedIn
              </a>
            </li>
            <li>
              <a
                href="https://x.com/workinweb"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-300 hover:text-white transition-colors flex items-center"
                aria-label="Follow us on X (Twitter)"
              >
                <svg
                  class="h-5 w-5 mr-3"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                  ></path>
                </svg>
                X (Twitter)
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-6">{t("footer.contact.title")}</h3>
        <ul class="space-y-4">
          <li class="flex items-center text-slate-300">
            <Mail className="h-5 w-5 mr-3" />
            <a
              href="mailto:weworkinweb@gmail.com"
              class="hover:text-white transition-colors"
            >
              weworkinweb@gmail.com
            </a>
          </li>
          <li class="flex items-center text-slate-300">
            <Phone className="h-5 w-5 mr-3" />
            <a
              href="tel:+17865107807"
              class="hover:text-white transition-colors">+1 (786) 510-7807</a
            >
          </li>
          <li class="flex items-start text-slate-300">
            <MapPin className="h-5 w-5 mr-3 mt-1" />
            <a
              href="https://www.google.com/maps?q=481+W+46th+Pl,+Miami,+FL+33012"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors"
            >
              481 W 46th Pl,<br />Miami, FL 33012
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div
      class="mt-12 pt-8 border-t border-slate-700 text-center text-slate-400"
    >
      <p>{t("footer.copyright")}</p>
    </div>
  </div>
</footer>
