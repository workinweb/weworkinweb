---
import { getLangFromUrl, useTranslations } from "../../i18n/translations";
import LottieReact from "../../components/ui/LottieReact";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="min-h-screen relative overflow-hidden flex items-center">
  <div
    class="absolute inset-0 bg-gradient-to-br from-slate-50 to-orange-50 dark:from-slate-900 dark:to-slate-800"
  >
    <div
      class="absolute inset-0 bg-[url('/patterns/grid.svg')] dark:bg-[url('/patterns/lightgrid.svg')] opacity-20 dark:opacity-[0.15]"
    >
    </div>
  </div>

  <div class="relative w-full max-w-7xl mx-auto px-4 py-20">
    <div class="grid lg:grid-cols-2 gap-8 xl:gap-12 items-center">
      <div
        class="flex flex-col items-center lg:items-start text-center lg:text-left mx-auto lg:mx-0 max-w-2xl lg:max-w-none opacity-0 animate-[slideInLeft_0.8s_ease-out_forwards]"
      >
        <h1
          class="text-5xl md:text-6xl xl:text-7xl text-foreground font-bold mb-6 leading-tight"
        >
          {t("hero.title1")}
          <br />
          <span class="gradient-text"> {t("hero.title2")} </span>
        </h1>
        <p class="text-lg md:text-xl xl:text-2xl text-foreground mb-8 max-w-xl">
          {t("hero.subtitle")}
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto sm:justify-center lg:justify-start"
        >
          <a
            href="#contact"
            class="button-primary text-center w-full sm:w-auto transition-transform duration-300 hover:scale-105 active:scale-95"
          >
            {t("hero.cta1")}
          </a>
          <a
            href={`/${lang}/showcase`}
            class="px-8 py-4 rounded-full border-2 border-slate-200 dark:border-slate-700 text-foreground hover:border-orange-500 dark:hover:border-orange-400 hover:text-orange-500 dark:hover:text-orange-400 transition-all duration-300 hover:scale-105 active:scale-95 text-center w-full sm:w-auto"
          >
            {t("hero.cta2")}
          </a>
        </div>
      </div>

      <div
        class="relative w-full max-w-2xl mx-auto lg:max-w-none opacity-0 animate-[scaleIn_0.8s_ease-out_forwards]"
      >
        <div class="aspect-square w-full max-w-xl mx-auto">
          <LottieReact
            client:only="react"
            src="https://assets3.lottiefiles.com/packages/lf20_iorpbol0.json"
            className="w-full h-full"
          />
        </div>
      </div>
    </div>
  </div>
</section>
