---
import Logo from "../components/Logo";
import { Mail, Phone, MapPin } from "lucide-react";
---

<footer class="bg-gradient-to-r from-slate-900 to-slate-800 text-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <div class="space-y-6">
        <Logo withDescription={false} />
        <p class="text-slate-300 text-sm leading-relaxed">
          Transforming ideas into exceptional web experiences. We don't just
          build websites; we craft digital solutions that work for your
          business.
        </p>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-6">Quick Links</h3>
        <ul class="space-y-4">
          {
            ["Home", "About", "Services", "Portfolio", "Contact"].map(
              (item) => (
                <li>
                  <a
                    href={`#${item.toLowerCase()}`}
                    class="text-slate-300 hover:text-white transition-colors flex items-center"
                  >
                    <span class="mr-2">→</span> {item}
                  </a>
                </li>
              )
            )
          }
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-6">Our Services</h3>
        <ul class="space-y-4">
          {
            [
              "Web Design",
              "Web Development",
              "SEO Optimization",
              "UI/UX Design",
            ].map((service) => (
              <li>
                <a
                  href="#"
                  class="text-slate-300 hover:text-white transition-colors flex items-center"
                >
                  <span class="mr-2">•</span> {service}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-6">Contact Us</h3>
        <ul class="space-y-4">
          <li class="flex items-center text-slate-300">
            <Mail className="h-5 w-5 mr-3" />
            <a
              href="mailto:weworkinweb@gmail.com"
              class="hover:text-white transition-colors"
            >
              weworkinweb@gmail.com
            </a>
          </li>
          <li class="flex items-center text-slate-300">
            <Phone className="h-5 w-5 mr-3" />
            <a
              href="tel:+17865107807"
              class="hover:text-white transition-colors">+1 (786) 510-7807</a
            >
          </li>
          <li class="flex items-start text-slate-300">
            <MapPin className="h-5 w-5 mr-3 mt-1" />
            <a
              href="https://www.google.com/maps?q=481+W+46th+Pl,+Miami,+FL+33012"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors"
            >
              481 W 46th Pl,<br />Miami, FL 33012
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div
      class="mt-12 pt-8 border-t border-slate-700 text-center text-slate-400"
    >
      <p>© {new Date().getFullYear()} WorkInWeb. All rights reserved.</p>
    </div>
  </div>
</footer>
