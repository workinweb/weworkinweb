---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
  type?: string;
}

const {
  title,
  description,
  image = "/logo/logo_notext.png",
  canonicalURL = Astro.url.href,
  type = "website",
} = Astro.props;

// Enhanced meta keywords for web development
const keywords = [
  "WorkInWeb",
  "web development",
  "website design",
  "custom web applications",
  "responsive design",
  "frontend development",
  "React development",
  "Next.js",
  "Astro framework",
  "Hosting",
  "web performance optimization",
  "SEO optimization",
  "mobile-first design",
  "UI/UX design",
  "web maintenance",
  "business websites",
  "professional web services",
  "modern web development",
  "fast websites",
  "secure websites",
  "custom web solutions",
].join(", ");

// Schema.org structured data for web development business
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  name: "WorkInWeb",
  image: "https://weworkinweb.com/logo/logo_notext.svg",
  description: description,
  "@id": canonicalURL,
  url: canonicalURL,
  telephone: "+1-786-510-7807",

  openingHoursSpecification: {
    "@type": "OpeningHoursSpecification",
    dayOfWeek: [
      "Monday",
      "Tuesday",
      "Wednesday",
      "Thursday",
      "Friday",
      "Saturday",
      "Sunday",
    ],
    opens: "09:00",
    closes: "17:00",
  },
  sameAs: [
    "https://www.linkedin.com/in/kevin-bueno-0a8809218/",
    "https://github.com/kbueno1077",
  ],
  priceRange: "$",
};
---

<!doctype html>
<html lang={"en"}>
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-B6VPNYPDSB"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-B6VPNYPDSB");
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- SEO Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="author" content="WorkInWeb" />
    <meta
      name="copyright"
      content={`© ${new Date().getFullYear()} WorkInWeb`}
    />
    <meta name="theme-color" content="#f97316" />

    <!-- Language Alternates -->
    <link rel="alternate" href={`${Astro.url.origin}/en`} hreflang="en" />
    <link rel="alternate" href={`${Astro.url.origin}/es`} hreflang="es" />
    <link rel="alternate" href={Astro.url.origin} hreflang="x-default" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Sitemap -->
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />

    <!-- Additional SEO Meta Tags -->
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="author" content="WorkInWeb" />
    <meta
      name="copyright"
      content={`© ${new Date().getFullYear()} WorkInWeb`}
    />
    <meta name="theme-color" content="#f97316" />
    <meta name="rating" content="General" />
    <meta name="revisit-after" content="7 days" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content="WorkInWeb" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={"https://weworkinweb.com/logo/logo_notext.svg"}
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@workinweb" />
    <meta name="twitter:creator" content="@workinweb" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={"https://weworkinweb.com/logo/logo_notext.svg"}
    />

    <!-- Preload Critical Resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />

    <ClientRouter />
  </head>
  <body>
    <slot />
    <script>
      // Check for saved theme preference
      import { inject } from "@vercel/analytics";
      inject();

      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
    </script>
  </body>
</html>
